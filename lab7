    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <img src="ryu_stand_still.png" id="player" alt="">                
            </div>
            <div class="col-md-9 offset-md-1" id="area">

            </div>
            
        </div>
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.1.1.js" ></script>
    
<script>
let powers = 1;
$(document).ready(function () {
   
    $('#player').mouseenter(function () {
        $('#player').attr('src','ryu_animated.gif')
    })
    $('#player').mouseleave(function () {
        $('#player').attr('src','ryu_stand_still.png')
    })
    $('#player').click(function () {
        $('#player').attr('src','ryu_hadouken_pose.png')
        $('#area').append('<img  id=id_'+powers+ ' " src="hadouken.gif"   style= "position: absolute; top: 140px; left:350px; " >')
        animate('id_'+powers);
        powers++;
    })
    function animate(params) {
        console.log(params + " is going");
        $('#'+params).animate({left: '1500px'},3000);
        // $(params).animate({left: '1000px'}, "");
    
    }
    

});
</script>
